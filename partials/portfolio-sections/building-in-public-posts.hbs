<div class="portfolio-column">
  <h3 class="portfolio-column-title">Building in Public</h3>

  {{#get "posts" limit="5" filter="tag:building-in-public" as |writing_posts|}}
    {{#foreach writing_posts}}
      <div class="portfolio-item">
        <a href="{{url}}" class="portfolio-link">
          <h4 class="portfolio-item-title">{{title}}</h4>
         {{> "portfolio-sections/post-excerpt"}}
        </a>
      </div>
    {{/foreach}}
  {{/get}}
</div>