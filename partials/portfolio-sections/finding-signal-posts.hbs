<div class="portfolio-column">
        <h3 class="portfolio-column-title">Finding the signal</h3>

        {{#get
          "posts" limit="5" filter="tag:finding-the-signal"
          as |writing_posts|
        }}
          {{#foreach writing_posts}}
            <div class="portfolio-item">
              <a href="{{url}}" class="portfolio-link">
                <h4 class="portfolio-item-title">{{title}}</h4>
                {{#if custom_excerpt}}
                  <p class="portfolio-item-desc">{{custom_excerpt}}</p>
                {{else if excerpt}}
                  <p class="portfolio-item-desc">{{excerpt words="25"}}</p>
                {{/if}}
              </a>
            </div>
          {{/foreach}}
        {{/get}}
        {{> "external-links" type="kuch-hai"}}
      </div>